  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\..\CCv.cs" Link="CCv.cs" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Icons\ClearCollection.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
