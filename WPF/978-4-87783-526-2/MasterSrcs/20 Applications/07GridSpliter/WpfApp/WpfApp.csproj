    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Icons\ClearCollection.png" />
    <None Remove="Icons\FindNext.png" />
    <None Remove="Icons\FindSymbol.png" />
